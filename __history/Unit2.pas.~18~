{$R *.fmx}

uses HeaderFooterTemplate;

procedure TForm2.Button1Click(Sender: TObject);
begin
      Form2:=nil;
      hide;
      Edit1.Text:='';
      Edit2.Text:='';
      Edit3.Text:='';
      Edit4.Text:='';
      Edit5.Text:='';

end;

procedure TForm2.Button2Click(Sender: TObject);
begin
    Edit1.text:='';
    Edit2.text:='';
    Edit3.text:='';
    Edit4.text:='';
    Edit5.text:='';
end;

