  FMX.Controls.Presentation, FMX.StdCtrls;

type
  TForm2 = class(TForm)
    Label1: TLabel;
    HeaderLabel: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
